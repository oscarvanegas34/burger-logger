<div class="jumbotron text-center" style="background: #e6ffff"><h1 class="display-4">Burgers</h1></div>
    <div class="container">
        <div class="row">
            <div id="left" class="col text-center">
              <table class="table">
                <thead style="background: #ffffcc"><th>Burgers to be eaten</th></thead>
                <tbody style="background: #ffebe6">
                  {{#each burgers}}
                    {{#unless devoured}}
                      {{> burger-block dev=false}}
                    {{/unless}}
                  {{/each}}
                </tbody>
              </table>
            </div>
            <div id="right" class="col text-center">
              <table class="table">
                <thead style="background: #ffffcc"><th>Burgers in my tummy</th></thead>
                <tbody style="background: #ffebe6">
                {{#each burgers}}
                  {{#if devoured}}
                    {{> burger-block dev=true}}
                  {{/if}}
                {{/each}}
                </tbody>
              </table>
            </div>
        </div>
    </div>
    <div class="row m-3">
      <div class="col"></div>
      <div class="col text-center" id="add-burger">
        <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="bn">Burger Name:</label>
            <input type="text" id="bn" name="name">
          </div>
          <button type="submit" style="background:#9fdf9f">Add Burger</button>
        </form>
      </div>
      <div class="col"></div>
    </div>


